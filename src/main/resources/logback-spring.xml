<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="SOCEX_BACKEND_LOG_PATH" value="${logging.file.path:-logs}" />

    <!-- Console Appender -->
    <appender name="Console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} %highlight(%-5level) [%blue(%t)] %yellow(%C{1}): %msg%n%throwable
            </Pattern>
        </encoder>
    </appender>

    <!-- File Appender -->
    <appender name="RollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${SOCEX_BACKEND_LOG_PATH}/socex-backend.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${SOCEX_BACKEND_LOG_PATH}/archived/socex-backend.%d{yyyy-MM-dd}.%i.log</fileNamePattern>

            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- DEV profile -->
    <springProfile name="default | dev">
        <logger name="com.socex" level="DEBUG" additivity="false">
            <appender-ref ref="Console" />
        </logger>

        <root level="INFO">
            <appender-ref ref="Console" />
        </root>
    </springProfile>

    <!-- PROD profile -->
    <springProfile name="prod">
        <logger name="com.socex" level="INFO" additivity="false">
            <appender-ref ref="RollingFile" />
            <appender-ref ref="Console" />
        </logger>

        <root level="INFO">
            <appender-ref ref="RollingFile" />
            <appender-ref ref="Console" />
        </root>
    </springProfile>

</configuration>